{
  "name": "depthourbooking",
  "version": "1.0.4",
  "description": "Dept Hour Booking MCP Server - Google OAuth2 authenticated time tracking integration",
  "type": "module",
  "main": "./lib/src/index.js",
  "scripts": {
    "dev:stdio": "nodemon --quiet --exec node --signal SIGINT -r ts-node/register ./src/index.ts",
    "dev:inspector": "mcp-inspector",
    "build": "tsc --build",
    "start": "node ./lib/src/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "auth:google": "node lib/scripts/extract-token.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup": "chmod +x scripts/*.sh && ./scripts/setup.sh",
    "setup:mcp": "chmod +x scripts/*.sh && ./scripts/setup-mcp.sh",
    "docker:build": "docker-compose build",
    "docker:run": "chmod +x scripts/*.sh && ./scripts/run-mcp.sh",
    "docker:run-direct": "chmod +x scripts/*.sh && ./scripts/run-mcp-docker.sh",
    "docker:cleanup": "chmod +x scripts/*.sh && ./scripts/docker-cleanup.sh",
    "docker:pull": "chmod +x scripts/*.sh && ./scripts/pull-image.sh",
    "docker:deploy": "chmod +x scripts/*.sh && ./scripts/build-and-push.sh",
    "test:mcp": "chmod +x scripts/*.sh && ./scripts/test-mcp.sh"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "dotenv": "^17.0.1",
    "node-fetch": "^2.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@modelcontextprotocol/inspector": "0.6.0",
    "@types/node": "^22.13.10",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
